    local_java_repository,
    name = "local_jdk",
    java_home = DEFAULT_SYSTEM_JAVABASE,
    build_file = "@bazel_tools//tools/jdk:jdk.BUILD",
)

register_toolchains("@rules_java//toolchain")
register_toolchains("@bazel_tools//tools/jdk:all")
